/* page/donate/donate.wxss */
.goods-item{
    /* display: flex; */
    padding: 15rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    margin:15rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.goods-item-add{
    padding: 15rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    margin:15rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
    height: 200rpx; 
    text-align: center; 
}
.goods-item-add image{
    height: 200rpx;
}
.thumb image{
    height: 160rpx;
    display: inline-block;
    margin-right: 15rpx;
}
.info{
    display: flex;
    flex-direction: column;
    font-size: 25rpx;
}
.goods-title{
    font-weight: 700;
}
.thumb{
    display: flex;
}
