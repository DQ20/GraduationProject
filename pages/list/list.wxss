.thumb{
    display: flex;
}
.goods-item{
    display: flex;
    padding: 15rpx;
    border: 1rpx solid #efefef;
    border-radius: 8rpx;
    margin:15rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.thumb image{
    height: 160rpx;
    display: block;
    margin-right: 15rpx;
}
.info{
    display: flex;
    flex-direction: column;
    font-size: 25rpx;
}
.goods-title{
    font-weight: 700;
}